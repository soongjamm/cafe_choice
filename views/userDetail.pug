extends layouts/main
include mixins/cafeBlock

block content
    .container__userDetail
        p.h4.border-bottom 회원정보
        .userDetail-privacy
            p.border-bottom 이름 : #{user.name}
            p.border-bottom 이메일 : #{user.email}
        br
        p.h3.border-bottom 내가 좋아하는 카페들
        .userDetail-like
            .card-columns
                each item in cafes
                    +cafeBlock({
                        id : item.id,
                        name : item.name,
                        location : item.location,
                        imageUrl : item.imageUrl,
                        amenities : item.amenities,
                        menu : item.menu,
                        latlng : item.latlng,
                        branch : item.branch,
                        comments : item.comments,
                        tag : item.tag,
                        wholike : item.wholike
                    })

