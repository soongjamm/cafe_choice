extends layouts/main
include mixins/searchedBlock

block content
    .search
        br
        if cafes != ""
            p.display-4.container #{searchingBy}(으)로 검색한 결과입니다.
        else 
            p.display-4.container #{searchingBy}의 검색결과가 없습니다.


        each item in cafes
            +searchedBlock({
                id : item.id,
                name : item.name,
                location : item.location,
                imageUrl : item.imageUrl,
                amenities : item.amenities,
                menu : item.menu,
                branch : item. branch,
                comments : item.comments,
                tag : item.tag
            })
        